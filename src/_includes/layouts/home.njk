<!-- start block wrapper -->
<section class="block-wrapper p-30" style="background: url(/images/banner-bg.png) no-repeat center center/cover">
	<div class="container">
		<div class="row">
			<div class="col-lg-3 pr-10">
				<div class="ts-post-overlay-style-1 ts-post-style-5">
					{% for podcast in collections.js_jabber | head(1)  %}
						{% include "episode_thumb.njk" %}
					{% endfor %}
					{% for podcast in collections.ruby_rogues | head(1)  %}
						{% include "episode_thumb.njk" %}
					{% endfor %}
				</div>
			</div>
			<!-- col end-->
			<div class="col-lg-6 pl-0 pr-10">
				<div id="featured-slider-2" class="owl-carousel ts-overlay-style ts-featured">
					{% for episode in collections.podcast | reverse | head(15) %}
						{% if episode.data.podcast != 'adv-in-angular' and episode.data.podcast != 'js-jabber' and episode.data.podcast != 'ruby-rogues' and episode.data.podcast != 'views-on-vue' %}
						<div class="item" style="background-image:url(/images/podcasts/{{podcasts[episode.data.podcast].artwork}})">
							<a class="post-cat ts-orange-bg" href="#">{{podcasts[episode.data.podcast].title}}</a>
							<div class="overlay-post-content">
								<div class="post-content">
									<h2 class="post-title lg">
										<a href="{{episode.url}}">{{episode.data.title}}</a>
									</h2>
									<ul class="post-meta-info">
										<li>
											<i class="fa fa-calendar-o"></i>
											{{ episode.date | date }}
										</li>
									</ul>
								</div>
							</div>
							<!--/ Featured post end -->
						</div>
						<!-- Item 1 end -->
						{% endif %}
					{% endfor %}
				</div>
				<!-- Featured owl carousel end-->
			</div>
			<!-- col end-->
			<div class="col-lg-3 pl-0">
				<div class="ts-post-overlay-style-1 ts-post-style-5">
					{% for podcast in collections.adv_in_angular | head(1)  %}
						{% include "episode_thumb.njk" %}
					{% endfor %}
					{% for podcast in collections.views_on_vue | head(1)  %}
						{% include "episode_thumb.njk" %}
					{% endfor %}
				</div>
			</div>
			<!--col end-->
		</div>
	</div>
</section>
