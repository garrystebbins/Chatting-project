	<!-- single post start -->
	<section class="single-post-wrapper">
		<div class="container">
			<div class="row">
				<div class="col-lg-9">
					<ol class="breadcrumb">
						<li>
							<a href="/">
								<i class="fa fa-home"></i>
								Home
							</a>
						</li>
						{% if podcast %}
						<li>
							<a href="/{{podcast}}">{{podcasts[podcast].title}}</a>
						</li>
						{% endif %}
						
						{% if blog %}
						<li>
							<a href="/blog">Blog</a>
						</li>
						{% endif %}
						
						<li>{{title | safe}}</li>
					</ol>
					<!-- breadcump end-->
					<div class="ts-grid-box content-wrapper single-post">
						<div class="entry-header">
							<h2 class="post-title lg">{{ title }}</h2>
							<ul class="post-meta-info">
								{% if author %}
								<li class="author">
									<a href="#">
										<img src="/images/avater/author.png" alt=""> {{ author }}
									</a>
								</li>
								{% endif %}
								<li>
									<i class="fa fa-clock-o"></i>
									{{ date | date }}
								</li>
								<li class="share-post">
									Share:
									<div class="sharethis-inline-share-buttons"></div>
								</li>
							</ul>
						</div>
						<!-- single post header end-->
						<div class="post-content-area">
							<div class="post-media post-featured-image">
								{% if youtube_video_id %}
									{{ youtube_video_id | embed_youtube | safe}}
								{% else %}
									<img src="{{ image }}" class="img-fluid" alt="">
								{% endif %}
							</div>
							<div class="entry-content">
								{{ content | safe }}
							</div>
						</div>

						{% if author %}
						<!-- post content area-->
						<div class="author-box">
							<img class="author-img" src="/images/avater/author.png" alt="">
							<div class="author-info">
								<h4 class="author-name">Elina Themen</h4>
								<div class="authors-social">
									<a href="#" class="ts-twitter">
										<i class="fa fa-twitter"></i>
