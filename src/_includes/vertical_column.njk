<div class="col-lg-6">
  <div class="ts-title-item">
    <h2 class="ts-cat-title ">
      <span>{{title}}</span>
    </h2>
  </div><!-- Title end -->
  <div class="post-list-box ts-list-post-box ts-grid-content">
    {% for post in postslist | head(-1) %}
    <div class="ts-overlay-style">
      <div class="item">
        <div class="ts-post-thumb">
          <a href="{{post.url | url}}">
            <img class="img-fluid" src="{{post.data.image}}" alt="">
          </a>

        </div>
        <div class="overlay-post-content">
          <div class="post-content">

            <h3 class="post-title md">
              <a href="{{post.url | url}}">{{post.data.title}}</a>
            </h3>
          </div>
        </div>
      </div>
      <!-- end item-->
    </div>
    {% endfor %}

    {% for post in postslist | head(-4) | reverse %}{% if loop.index > 1 %}
    <div class="post-content media">
      <a href="{{post.url | url}}">
        <img class="d-flex" src="{{post.data.image}}" alt="">
      </a>
      <div class="media-body align-self-center">
        <h3 class="post-title">
          <a href="{{post.url | url}}">{{post.data.title}}</a>
        </h3>
        <span class="post-date-info">
          <i class="fa fa-clock-o"></i>
          {{ post.data.date | date }}
        </span>
      </div>
    </div>
    <!-- end item-->
    {% endif %}{% endfor %}
  </div>
</div>
<!-- col end-->
